<launch>

    <arg name="track_unknown_space" default="true"/>

    <!-- Move base -->
    <node pkg="move_base" type="move_base" name="move_base" output="screen" >

        <param name="SBPLLatticePlanner/primitive_filename" value="$(find mir_navigation)/mprim/unicycle_highcost_5cm.mprim" />

        <rosparam file="$(find rm_cleaner_js)/config/move_base_params.yaml" command="load" />
        <rosparam file="$(find rm_cleaner_js)/config/global_planner_params.yaml" command="load" />
        <rosparam file="$(find rm_cleaner_js)/config/local_planner_params.yaml" command="load" />

        <!-- Global costmap -->
        <rosparam file="$(find rm_cleaner_js)/config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find rm_cleaner_js)/config/costmap_global_params.yaml" command="load" />

        <!-- Local costmap -->
        <rosparam file="$(find rm_cleaner_js)/config/costmap_common_params.yaml" command="load" ns="local_costmap"/>
        <rosparam file="$(find rm_cleaner_js)/config/costmap_local_params.yaml" command="load" />

        <!-- <remap from="map" to="/map" /> -->
        <!-- <remap from="marker" to="move_base_node/DWBLocalPlanner/markers" /> -->

        <param name="global_costmap/track_unknown_space" value="$(arg track_unknown_space)" />
        <param name="local_costmap/track_unknown_space" value="$(arg track_unknown_space)" />

    </node>

    <!-- GMapping -->
    <node pkg="gmapping" type="slam_gmapping" name="gmapping" output="screen">
        <remap from="scan" to="scan_multi" />
        <param name="map_frame" value="/map" />
        <param name="odom_frame" value="/odom" />
        <param name="base_frame" value="/base_link" />
        <param name="map_update_interval" value="2.0" />
        <param name="linearUpdate" value="0.5" />
        <param name="xmin" value="-15" />
        <param name="ymin" value="-15" />
        <param name="xmax" value="15" />
        <param name="ymax" value="15" />
        <param name="delta" value="0.05" />
    </node>

    <!-- Explore lite -->
    <node pkg="explore_lite" type="explore" name="explore" output="screen">
        <param name="robot_base_frame" value="base_link"/>
        <param name="costmap_topic" value="map"/>
        <param name="costmap_updates_topic" value="map_updates"/>
        <param name="visualize" value="true"/>
        <param name="planner_frequency" value="0.33"/>
        <param name="progress_timeout" value="30.0"/>
        <param name="potential_scale" value="3.0"/>
        <param name="orientation_scale" value="0.0"/>
        <param name="gain_scale" value="1.0"/>
        <param name="transform_tolerance" value="0.3"/>
        <param name="min_frontier_size" value="0.25"/>
    </node>

</launch>